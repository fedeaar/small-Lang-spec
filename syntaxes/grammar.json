            "name":"keyword.operator.math.slspec"
        },
        "punctuation.definition.slspec": {
            "match":"(\\{|\\}|\\(|\\)|\\]|\\[|‚ü®|‚ü©|\\|)",
            "name":"punctuation.parenthesis.slspec"
        },
        "comment.block.slspec": {
            "begin": "\/\\*",
            "end": "\\*\/",
