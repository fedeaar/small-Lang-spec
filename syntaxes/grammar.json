        },
        "entity.name.function.slspec": {
            "match":"\\b[\\D&&\\w]\\w*(\\?|\\b)\\s*(?=\\()",
            "name":"entity.name.function.slspec"
        },
        "entity.name.function.type.slspec": {
            "match":"(?i)(?<=type)\\b[\\D&&\\w]\\w*\\b\\s*(?=\\=)",
