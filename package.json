{
	"name": "smalllang-spec-grammar",
	"displayName": "smallLang-spec-grammar",
	"description": "a syntax and semantics tool for smallLang specifications according to David Gries' Science of Programming.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:smallLang-spec"
	],
	"main": "./out/extension.js",
	"contributes": {
		"snippets": [
			{
				"language": "smallLang-spec",
				"path": "./syntaxes/smallLang-spec.snippets.json"
			}
		],
		"languages": [
			{
				"id": "smallLang-spec",
				"extensions": [
					".slspec"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "smallLang-spec",
				"scopeName": "source.slspec",
				"path": "./syntaxes/smallLang-spec.tmGrammar.json"
			}
		],
		"themes": [
            {
                "label": "smallLang-spec-theme",
                "path": "./syntaxes/smallLang-spec.tmTheme.json"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
